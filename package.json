{
  "name": "microservices-platform",
  "version": "1.0.0",
  "description": "Microservices platform built with Bun.js, TypeScript, and modern tools",
  "workspaces": [
    "services/*",
    "shared/*"
  ],
  "scripts": {
    "setup": "bun install && bun run build:shared && bun run db:migrate",
    "dev": "pm2 start ecosystem.config.js && pm2 logs",
    "build": "bun run build:shared && bun run build:services",
    "build:shared": "bun run --filter=shared-* build",
    "build:services": "bun run --filter=*-service build",
    "test": "bun test --coverage",
    "test:unit": "bun test tests/unit --coverage",
    "test:integration": "bun test tests/integration",
    "test:e2e": "bun test tests/e2e",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "db:migrate": "bun run --filter=*-service db:migrate",
    "clean": "rm -rf node_modules services/*/node_modules shared/*/node_modules",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:logs": "pm2 logs"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0",
    "pm2": "^5.3.0"
  },
  "dependencies": {
    "hono": "^3.12.0",
    "drizzle-orm": "^0.29.0",
    "drizzle-kit": "^0.20.0",
    "pino": "^8.16.0",
    "pino-pretty": "^10.2.0",
    "zod": "^3.22.0",
    "redis": "^4.6.0",
    "jsonwebtoken": "^9.0.0",
    "@types/jsonwebtoken": "^9.0.0",
    "bcrypt": "^5.1.0",
    "@types/bcrypt": "^5.0.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "type": "module"
}